<!doctype html>
<html lang="<%= config.language %>">
<head>
  <title><%= config.title %></title>
  <meta name="description" content="<%= config.subtitle %>" id="meta-description">
  <%- partial('_partial/common-head') %>
  <script type="application/ld+json">
    {
      "@context":"http://schema.org",
      "@type":"ItemList",
      "itemListElement":[
        <% page.posts.each( (post, i) => { %>
        {
          "@type":"ListItem",
          "position":<%- i+1 %>,
          "url": "<%- post.permalink %>"
        }<% if (i + 1 < page.posts.length ) { %>,<% } %>
        <% }) %>
      ]
    }
  </script>
</head>
<body>
  <%- partial('_partial/common-header') %>
  <div class="container">
    <main class="main">
      <% page.posts.each( (post, i) => { %>
        <article class="article-summary">
          <header class="header">
            <div><time datetime="<%- post.date.toISOString() %>"><span class="calendar-icon">üìÖ</span><span><%- post.date.locale(config.language).format('LL') %></span></time>
            </div>
            <h2 class="header__title article__title"><a href="<%- url_for(post.path) %>"><%- post.title %></a></h2>
            <% if (post.featured) { %>
              <%- partial('_partial/feature-image', {featured: post.featured}) %>
            <% } %>
          </header>
          <% if (post.excerpt) { %>
            <div class="content"><%- post.excerpt %></div>
            <div><a href="<%- url_for(post.path) %>">üìñ Á∂ö„Åç„ÇíË™≠„ÇÄ</a></div>
          <% } else { %>
            <div class="content"><%- post.content %></div>
          <% } %>
        </article>
      <% }) %>
      <footer><%- paginator() %></footer>
    </main>
    <%- partial('_partial/common-footer') %>
  </div>
  <%- partial('_partial/common-body-footer') %>
</body>
</html>

<!doctype html>
<html lang="<%= config.language %>" itemscope itemtype="http://schema.org/Blog">
<head>
  <title><%- page.title %> | <%= config.title %></title>
  <%- partial('_partial/common-head') %>
  <%- open_graph({
    image: page.featured ? `/assets/images/${page.featured.image}/${page.featured.image}.jpg` : '',
    twitter_card: page.featured ? 'summary_large_image' : 'summary',
    twitter_id: 'memolog',
    twitter_site: 'https://twitter.com/memolog',
    fb_app_id: '168245123786587'
  }) %>
</head>
<body class="post">
  <%- partial('_partial/common-header') %>
  <div class="container">
    <main class="main">
      <article itemprop="blogPost" itemscope itemType="http://schema.org/BlogPosting">
        <header class="header">
          <h1 class="header__title" itemprop="name headline"><%- page.title %></h1>
          <div>
            <time datetime="<%- page.date.toISOString() %>" itemprop="datePublished">
              <span class="calendar-icon">ğŸ“…</span><span><%- page.date.locale(config.language).format('LL') %></span>
            </time>
            <span class="article__author"><span class="author-icon">ğŸ‘¨â€ğŸ¨</span><span itemprop="author publisher">Yutaka Yamaguchi</span></span>
          </div>
          <% if (page.featured) { %>
            <%- partial('_partial/feature-image', {featured: page.featured}) %>
          <% } %>
        </header>
        <div id="article-content" class="content <%- page.className %>" itemprop="articleBody"><%- page.content %></div>
      </article>
    </main>
  </div>
  <%- partial('_partial/common-body-footer') %>
</body>
</html>
